{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Profil</h1>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}



                    <div class="col-lg-6">

                        {#<div class="form-group">#}
                            {#<label class="control-label" for="fn">{{ 'profile.show.firstname'|trans }} :</label>#}
                            {#{{ form_widget(form.first_name) }}#}
                        {#</div>#}
                        <div class="form-group">
                            <label class="control-label" for="un">{{ 'profile.show.username'|trans }} :</label>
                            {{ form_widget(form.username) }}
                    </div>
                    <div class="col-lg-6">
                        {#<div class="form-group">#}
                            {#<label class="control-label" for="ln">{{ 'profile.show.lastname'|trans }} :</label>#}
                            {#{{ form_widget(form.lastname) }}#}
                        {#</div>#}
                        <div class="form-group">
                            <label class="control-label" for="em">{{ 'profile.show.email'|trans }} :</label>
                            {{ form_widget(form.email) }}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <input type="submit" class="btn btn-success" value="{{ 'profile.edit.submit'|trans }}"/>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>


