{% extends "@App/base.html.twig" %}

{% block appbundle_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Vos contrats</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="col-lg-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="{{ path('contract_create') }}" class="message-submit btn btn-success">Enregistrer un nouveau contrat</a>
            </div>
            <div class="panel-body">
                <table class="table">
                <thead>
                <tr>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Pièce jointe</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for contract in contracts %}
                    <tr>
                        <td>{{ contract.startDate|date('d/m/Y') }}</td>
                        <td>{{ contract.endDate|date('d/m/Y') }}</td>
                        <td>{{ contract.attachment.name }} <a href="{{ path('download_file', { 'id': contract.attachment.id}) }}">Télécharger</a></td>
                        <td><a class="btn btn-warning" href="{{ path('contract_edit', {'id': contract.id}) }}">Éditer</a></td>
                    </tr>
                {% else %}
                    <td>Vous n'avez aucun contrat pour le moment.</td>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock appbundle_content %}