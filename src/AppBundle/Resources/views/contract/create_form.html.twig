{% extends "@App/base.html.twig" %}

{% block appbundle_content %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"> Enregistrement d'un contrat</h1>
        </div>
        <!-- /.col-lg-12 -->
        <div class="col-lg-12">
            <div class="panel panel-default">


                <div class="panel-body">
                    <div class="row">
                        <form role="form">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="name" class="control-label">Nom</label>
                                    {{ form_widget(form.name) }}
                                    {{ form_errors(form.name) }}
                                </div>
                                <div class="form-group">
                                    <label for="startDate" class="control-label">Date de début</label>
                                    {{ form_widget(form.startDate) }}
                                    {{ form_errors(form.startDate) }}
                                </div>
                                <div class="form-group">
                                    <label for="endDate" class="control-label">Date de fin</label>
                                    {{ form_widget(form.endDate) }}
                                    {{ form_errors(form.endDate) }}
                                </div>
                                <div class="form-group">
                                    <label for="user" class="control-label">Propriétaire</label>
                                    {{ form_widget(form.user) }}
                                    {{ form_errors(form.user) }}
                                </div>
                                <div class="form-group input-group">
                                    <label for="attachment" class="control-label">Pièce jointe</label>
                                    {{ form_widget(form.attachment) }}
                                    {{ form_errors(form.attachment) }}
                                </div>
                            </div>
                            <div class="col-lg-12">
                                {{ form_widget(form.save) }}
                            </div>
                        </form>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock appbundle_content %}
