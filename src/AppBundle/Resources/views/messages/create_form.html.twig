{% extends "@App/base.html.twig" %}
{% block appbundle_content %}

    <div class="row">
        <div class="col-lg-12">
            {% if update %}
                <h1 class="page-header">Édition d'un message</h1>
            {% else %}
                <h1 class="page-header">Création d'un message</h1>
            {% endif %}
        </div>
        <!-- /.col-lg-12 -->
    </div>

    {{ form_start(form) }}
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                            <label for="message" class="control-label">Message :</label><br/>
                            {{ form_widget(form.body) }}
                            {{ form_errors(form.body) }}
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                            <label for="receiver" class="control-label">Destinataires :</label><br/>
                            {{ form_widget(form.receiver) }}
                            {{ form_errors(form.receiver) }}
                            </div>
                        </div>
                    </div>
                </form>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock appbundle_content %}
