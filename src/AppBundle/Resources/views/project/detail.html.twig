{% extends "@App/base.html.twig" %}

{% block appbundle_content %}
    <div class="row">
        {# #}
        <div class="col-lg-12">
            <h1 class="page-header">Détail projet {{ project.name }} </h1>
        </div>

        créé par {{ project.owner }} le {{ project.creationDate|date("d/m/Y") }}
        accéssible par :
        {% if project.users|length > 0 %}
            {% for user in project.users %}
                <a href="">{{ user }}</a>,
            {% endfor %}
        {% else %}
            tout le monde
        {% endif %}

        <!-- /.col-lg-12 -->
    </div>


    <div class="col-lg-12">

        {#  #}
        <div class="panel-body">

            <div class="coprocard lead">
                <p class=coproMessage">{{ project.description }}</p>
            </div>

            <div>
                {% for survey in project.survey %}
                    {{ survey.title }}
                    <ul>
                    {% for option in survey.options %}
                        <li>{{ option.title }} (nb de votes : {{ option.votes }})</li>
                    {% endfor %}
                    </ul>

                {% endfor %}

            </div>

            {# ADD : survey.thread for the feeds #}

        </div>


    </div>
{% endblock appbundle_content %}